@using System.Globalization
@inherits umbraco.MacroEngines.DynamicNodeContext
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    Layout = "Master.cshtml";
		
}

@section head{
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAyc2x8OiS22tSfQRN-7L7fkliAHeyVEk8&amp;sensor=false"></script>
}

<div id="container" class="normal bygningsbeskrivelse">
	
	@Umbraco.RenderMacro("TopImages")

    
    <article>
		<div id="content" class="main">
		
	        <div class="clearfix spacing"></div>
		        <div class="main gu6">
		        	<div class="row">
						<div class="col gu4">
							<h1 class="normal">@Model.Content.Name</h1>
							<a href="#" onClick="history.go(-1); return false;" class="backbutton">@Umbraco.Field("#Tilbage")</a>
							<div id="actions">
								<a href="#" class="shareholder yellowbutton"></a>
								<a href="javascript:window.print();" class="print yellowbutton"></a>
									
								@{Html.RenderPartial("Sharer");}
							</div>
							<div class="clearfix"></div>
							<div class="description">							
								@Umbraco.Field("description", convertLineBreaks: true)
							</div>	
							<div class="bodytext">							
								@Model.Content.GetPropertyValue("bodyText")
							</div>
						</div>
						
						<div class="col gu2 right">
							
	
							<div class="data">
								@if(CurrentPage.HasValue("gps")){
								<h2 class="top">@Umbraco.Field("#Hvor i Carlsberg Byen") <a href="https://maps.google.dk/maps?q=@Model.Content.GetPropertyValue("gps")" class="location yellowbutton" target="_blank"></a></h2>
								}
									

								
								@Umbraco.RenderMacro("Bygningsdata")
								
								
							</div>
								
							
						</div>
		        	</div>
		        </div>
		</div>
    </article>
</div><!-- end #container -->

<script type="text/javascript" src="/scripts/gmaps.js"></script>								