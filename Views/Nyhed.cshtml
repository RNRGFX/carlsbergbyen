@using System.Globalization
@inherits umbraco.MacroEngines.DynamicNodeContext
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    Layout = "Master.cshtml";
		
}

@section head{
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAyc2x8OiS22tSfQRN-7L7fkliAHeyVEk8&amp;sensor=false"></script>
	<script type="text/javascript" src="/scripts/gmaps.js"></script>
		
}

<div id="container" class="news normal">
	@Umbraco.RenderMacro("TopImages")
    
    <article>
		<div id="content" class="main">
		
	        <div class="clearfix spacing"></div>
		        <div class="main gu6">
		        	<div class="row">
						<div class="col gu4">
							<h1 class="normal news">@Model.Content.Name</h1>
							
								
								
							<div class="meta"><span class="category">@Umbraco.RenderMacro("GetNewsCategories")</span><span class="date">@Umbraco.RenderMacro("GetDate")</span><br/><span class="author">af @Model.Content.GetPropertyValue("Author")</span></div>
							<div id="actions">
								<a href="#" class="shareholder yellowbutton"></a>
								@Umbraco.RenderMacro("GetLocation")
								<a href="javascript:window.print();" class="print yellowbutton"></a>
									
								@{Html.RenderPartial("Sharer");}
							</div>
							<div class="clearfix spacing45"></div>
							<div class="description">
								@Umbraco.Field("description", convertLineBreaks: true)
							</div>
										
										
							<div class="bodytext">
							
							@Model.Content.GetPropertyValue("bodyText")
								</div>
						</div>
						
						<div class="col gu2">
							<div class="clearfix spacing"></div>
								
							@Umbraco.RenderMacro("NewsMap")
								
							<h2 class="newsoverview">@Umbraco.Field("#Nyhedsoversigt")</h2>
							@Umbraco.RenderMacro("ListLatestNews", new {nodeId="1052", limit=10, startIndex = 0})
						</div>
		        	</div>
		        </div>
		</div>
    </article>
</div><!-- end #container -->